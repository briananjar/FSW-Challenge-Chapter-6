<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../../partials/header') %>
    <title>Histories</title>
</head>
<body>
    <%- include('../../partials/navbar') %>

    <div class="container mt-5">
        <h3>Ubah User History</h3>
        <div class="card mt-3">
            <div class="card-body">
                <form action="/history/edit/<%= id %>" method="post">
                    <div class="row d-flex justify-content-between gx-5">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="exampleInputEmail1" class="form-label">Durasi Bermain <span style="color: red;">*</span></label>
                                <input name="playingDuration" type="number" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" required value="<%= playingDuration %>">
                            </div>
                            <div class="mb-3">
                                <label for="exampleInputPassword1" class="form-label">Level Pengguna <span style="color: red;">*</span></label>
                                <select name="levelUser" class="form-select" aria-label="Default select example" required>
                                    <option <%= levelUser === 'beginner' && 'selected' %> value="beginner">Pemula</option>
                                    <option <%= levelUser === 'intermediate' && 'selected' %> value="intermediate">Menengah</option>
                                    <option <%= levelUser === 'expert' && 'selected' %> value="expert">Ahli</option>
                                    <option <%= levelUser === 'professional' && 'selected' %> value="professional">Profesional</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="exampleInputEmail1" class="form-label">Skor <span style="color: red;">*</span></label>
                                <input name="score" type="number" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" required value="<%= score %>">
                            </div>
                        </div>
                    </div>
                    <div>
                        <button type="submit" class="btn btn-primary">Simpan</button>
                        <a class="btn btn-outline-dark" href="/history">Kembali</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <%- include('../../partials/footer') %>
</body>
</html>